%body
  .flash-box
  .wrapper
    = render 'shared/chat-side'
    .chat-main
      .main-header
        .main-header__left-box
          %h2.main-header__left-box__current-group GROUP NAME
          %ul.main-header__left-box__member-list
            %li.main-header__left-box__member-list__member MEMBER: MEMBER'S NAME
          .main-header__edit-btn EDIT
      .messages
        .message
          .message__upper-info 
            %p.message__upper-info__talker USERNAME
            %p.message__upper-info__date DATE
          %p.message__text TEXT
      .form
        = form_for [@group, @message] do |f|
          = f.text_field :content, class: 'form__message', placeholder: 'type a message'
          .form__mask
            = f.label :image, class: 'form__mask__image' do
              = fa_icon 'picture-o', class: 'icon'
              = f.file_field :image, class: 'hidden'
          = f.submit 'Send', class: 'form__submit'

